<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.tp_baseline.nkf.SingleQuizFragment">

    <TextView
        android:id="@+id/textView_quiz_question"
        android:layout_width="320dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="37dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <RadioGroup
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_quiz_question"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="49dp">

        <RadioButton
            android:id="@+id/radioButton_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello1"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            />

        <RadioButton
            android:id="@+id/radioButton_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello2"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <RadioButton
            android:id="@+id/radioButton_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello3"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <RadioButton
            android:id="@+id/radioButton_answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello4"
            android:textSize="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

    </RadioGroup>


</android.support.constraint.ConstraintLayout>
